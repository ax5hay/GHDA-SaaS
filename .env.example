# Application
APP_NAME=GHDA-SaaS
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_TITLE="Government Health Data Automation API"
API_DESCRIPTION="API for automating analysis of government health field survey reports"

# Database
DATABASE_URL=postgresql://ghda_user:ghda_password@localhost:5432/ghda_saas
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=false
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600

# Object Storage (MinIO/S3)
STORAGE_TYPE=minio
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=ghda-documents
STORAGE_REGION=us-east-1
STORAGE_SECURE=false

# OCR
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=eng+hin
OCR_TIMEOUT_SECONDS=120

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=["docx","pdf","jpg","jpeg","png"]

# Processing
DOCUMENT_PROCESSING_TIMEOUT_SECONDS=300
PARSER_CONFIDENCE_THRESHOLD=0.7
PHRASE_MATCH_CONFIDENCE_THRESHOLD=0.75

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_OCR=true
ENABLE_ASYNC_PROCESSING=true
ENABLE_AUDIT_LOGGING=true
