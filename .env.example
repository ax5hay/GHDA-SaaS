# Environment
NODE_ENV=development
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql+asyncpg://ghda_user:ghda_password@localhost:5432/ghda_saas
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=50

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=0.0.0.0

# Service Ports
DOCUMENT_SERVICE_PORT=8001
REPORT_SERVICE_PORT=8002
ANALYTICS_SERVICE_PORT=8003
PROCESSING_SERVICE_PORT=8004

# Service Hosts (for Docker)
DOCUMENT_SERVICE_HOST=document-service
REPORT_SERVICE_HOST=report-service
ANALYTICS_SERVICE_HOST=analytics-service
PROCESSING_SERVICE_HOST=processing-service

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_MAX=200
RATE_LIMIT_WINDOW=60000

# JWT
JWT_SECRET=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Object Storage (MinIO/S3)
STORAGE_TYPE=minio
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=ghda-documents
STORAGE_REGION=us-east-1
STORAGE_SECURE=false

# OCR
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=eng+hin
OCR_TIMEOUT_SECONDS=120

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=false
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=docx,pdf,jpg,jpeg,png

# Processing
DOCUMENT_PROCESSING_TIMEOUT_SECONDS=300
PARSER_CONFIDENCE_THRESHOLD=0.7
PHRASE_MATCH_CONFIDENCE_THRESHOLD=0.75

# Monitoring (Prometheus)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Frontend
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:3000
